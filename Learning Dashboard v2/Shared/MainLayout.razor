@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="row-layout master-page-container">
    <div class="column-layout group">
        <div class="column-layout logo">
            <img src="assets/skillz-logo.svg" class="image" />
            <img src="assets/skillz-logo-text.svg" class="image_1" />
        </div>
        <div @onclick="@(e => Navigate(""))" class="column-layout group_1">
            <IgbButton Variant="ButtonVariant.Flat" class="icon-button button" master-page-scope>
                <span class="material-icons">
                    dashboard
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <p class="typography__overline text">
                Main
            </p>
        </div>
        <div @onclick="@(e => Navigate("courses"))" class="column-layout group_1">
            <IgbButton Variant="ButtonVariant.Flat" class="icon-button button" master-page-scope>
                <span class="material-icons">
                    school
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <p class="typography__overline text">
                Courses
            </p>
        </div>
        <div @onclick="@(e => Navigate("tasks"))" class="column-layout group_1">
            <IgbButton Variant="ButtonVariant.Flat" class="icon-button button" master-page-scope>
                <span class="material-icons">
                    assignment_turned_in
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <p class="typography__overline text">
                Tasks
            </p>
        </div>
        <div @onclick="@(e => Navigate("progress"))" class="column-layout group_1">
            <IgbButton Variant="ButtonVariant.Flat" class="icon-button button" master-page-scope>
                <span class="material-icons">
                    assessment
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <p class="typography__overline text">
                Progress
            </p>
        </div>
        <div @onclick="@(e => Navigate("profile"))" class="column-layout group_1">
            <IgbButton Variant="ButtonVariant.Flat" class="icon-button button" master-page-scope>
                <span class="material-icons">
                    person
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <p class="typography__overline text">
                Profile
            </p>
        </div>
    </div>
    <div class="view-container">
        @Body
    </div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
